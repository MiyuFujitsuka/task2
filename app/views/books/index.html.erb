<h1>Books</h1>
<% @books.each do |book| %>

 <table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
   </tr>
  </thead>
 
  <tbody>
   <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><a href="/books/#{book.id}" >Show</a></td>
    <td><a href="/books/#{book.id}/edit" >Edit</a></td>
    <td><a href="/books/#{book.id}" >Destory</a></td>
   </tr>
  </tbody>
 </table>
<% end %>